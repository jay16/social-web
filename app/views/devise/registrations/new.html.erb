<%= stylesheet_link_tag "/stylesheets/devise_form" %>
<%= javascript_include_tag "/javascripts/menu_highlight.js" %>


<div id="myModal" style="margin:0 auto;">
 <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
 <%= devise_error_messages! %>
    
   <div class="modal-header">
      <span class="welcome">新用户注册</span>
      <span class="small">胜因营销管理</span>
   </div>
   
   <div class="modal-body">
     <div class="row">
       <%= f.label :email, "邮箱： " %>
       <%= f.email_field :email %>
     </div>
     <div class="row">
		    	<%= f.label :password, "*密码：" %>
		    	<%= f.password_field :password %>
		    </div>
		  
		    <div class="row">
		    	<%= f.label :password_confirmation, "*确认密码"%>
		    	<%= f.password_field :password_confirmation %>
		    </div>
		    <div class="row">
		    	<%= f.submit "注册",:class => "btn primary" %>
		    </div>
		   	<div class="row">
		   	  <%= render :partial => "devise/shared/links" %>
		   	</div>
    </div>
      
 <% end %>   
</div>

