<% @user = Hash.new %>
<% @statuses.data.user.each do |weibo| %>
<% @user[weibo[0].to_s] = weibo[1] %>
<% end %>

<% @statuses.data.info.each do |weibo| %>
<div class="row">
  <div class="span1">
  <a><img src="<%= weibo.head %>/100"></a>
  </div>
  
  <div class="span5">
   <div class="row">
   <div class="span5">
					<a><%= @user[weibo.name] %>:</a>
					<span><%= weibo.text %></span><br>
					<% img_url = weibo.image[0] if weibo.image? %>
					<img src="<%= img_url %>/160">
			</div>
			</div>
			
			<% if weibo.source? %>
				<div class="row" style="background:lightgray;">
				<div class="span1">
				  <a><img src="<%= weibo.source.head %>/100"></a>
				</div>
				<div class="span4">
				  <a><%= weibo.source.nick %>:</a>
				  <%= weibo.source.text %><br>
					<% img_url = weibo.source.image[0] if weibo.source.image? %>
					<img src="<%= img_url %>/160">
				</div>
				</div>
			<% end %>
  </div>
</div>
<% end %>
