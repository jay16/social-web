<div class="modal hide" id="sina_statuses_image" style="width:300px;margin:0;">
  <div class="modal-body">
    <a class="close" onclick="$('#sina_statuses_image').addClass('hide');">×</a>
    
				<div class="tabbable">
						<ul class="nav nav-tabs">
								<li class="active"><a href="#sina_img_tab" data-toggle="tab">本地上传</a></li>
								<li><a href="#sina_url_tab" data-toggle="tab">URL上传<span style="color:red;">高</span></a></li>
						</ul>
						<div class="tab-content">
								<div class="tab-pane active" id="sina_img_tab">
								  <%= form_tag("/sina_weibo/upload_img", :multipart=>true, :remote => true, :id => "sina_img_tab_form") do %>
							     <%= file_field_tag :sina_img_field, :onchange => "readURL(this)", :accept => 'image/png,image/gif,image/jpeg,image/jpg', :class => 'btn' ,:size=>15 %><br>
							   <img id="sina_load_img_pane">
								  <%= submit_tag "上传", class:"btn",remote:true %>
								  <% end %>
								</div>
								<div class="tab-pane" id="sina_url_tab">
								  <%= text_field_tag "url_field",'Enter the image url here' %>
								</div>
						</div>
				</div>
   
  </div>
</div>
